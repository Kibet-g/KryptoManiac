# PRODUCTION Environment Configuration
# Use this for live production deployment

# App Settings
DEBUG=false
APP_ENV=production

# CORS - Restrict to production domains only
CORS_ORIGINS=["https://cryptomaniac.app", "https://www.cryptomaniac.app"]

# Data Providers
BINANCE_BASE_URL=https://api.binance.com/api/v3
BINANCE_WS_URL=wss://stream.binance.com:9443/ws
COINCAP_BASE_URL=https://api.coincap.io/v2

# Cache (aggressive caching for performance)
CACHE_TTL_SECONDS=120
CACHE_MAX_SIZE=1000

# ML Settings
PREDICTION_DAYS_DEFAULT=7
PREDICTION_DAYS_MAX=30

# Binance Affiliate (IMPORTANT: Set this for revenue!)
BINANCE_AFFILIATE_ID=YOUR_AFFILIATE_ID_HERE

# Logging
LOG_LEVEL=WARNING

# Security
RATE_LIMIT_PER_MINUTE=60
